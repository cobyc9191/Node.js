<h1>{{title}}</h1>
<div class="container">
   
    <ul>
        {{#each data}}
        <form method="post" action="/deleteAchievements">
            <li>
                {{this.text}}
                <input type="hidden" name="achievementId" value="{{this.id}}">
                <input type="hidden" value="{{characterId}}" name="characterId">
                <button type="submit">X</button>
                
            </li>
        </form>
        {{/each}}
    </ul>
    
    <form action="/addAchievement" method="post">
        <div class="card">
            <div class="card-body">
                <input type="hidden" value="{{characterId}}" name="characterId">
                <input type="text" class="form-control" placeholder="Enter Achievement" name="achievementName">
            </div>
        </div>
        <div>
            <button type="submit">Add</button>
        </div>

    </form>
</div>